{
  "name": "@sensocto/threejs",
  "version": "0.1.0",
  "description": "Three.js/TypeScript client for the Sensocto sensor platform",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    },
    "./three": {
      "import": {
        "types": "./dist/three/index.d.ts",
        "default": "./dist/three/index.js"
      },
      "require": {
        "types": "./dist/three/index.d.cts",
        "default": "./dist/three/index.cjs"
      }
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "sensocto",
    "sensor",
    "iot",
    "three.js",
    "threejs",
    "3d",
    "webgl",
    "websocket",
    "phoenix",
    "realtime",
    "typescript"
  ],
  "author": "Sensocto",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/sensocto/sensocto.git",
    "directory": "clients/threejs"
  },
  "bugs": {
    "url": "https://github.com/sensocto/sensocto/issues"
  },
  "homepage": "https://github.com/sensocto/sensocto/tree/main/clients/threejs#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@types/three": "^0.160.0",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "@vitest/coverage-v8": "^1.2.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "prettier": "^3.2.4",
    "three": "^0.160.0",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3",
    "vitest": "^1.2.0",
    "ws": "^8.16.0"
  },
  "peerDependencies": {
    "three": ">=0.150.0"
  },
  "peerDependenciesMeta": {
    "three": {
      "optional": true
    }
  }
}
